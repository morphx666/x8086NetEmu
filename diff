     Sub Main()
+        Dim abortMsg As String = "This tool can only be run in DEBUG mode while inside the IDE"
+#If DEBUG Then
+        If Debugger.IsAttached Then
+            Console.WriteLine("Are you sure you want to parse the opcodes' emulation code? [y/N]")
