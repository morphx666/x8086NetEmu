     Private Function ToBCD(v As UInt16) As UInt16
-        If v >= 100 Then v = v Mod 100
-        Return ((v Mod 10) + 16 * (v / 10))
+        'If v >= 100 Then v = v Mod 100
+        'Return (v Mod 10) + 16 * (v / 10)
+
+        Dim i As Integer = 0
+        Dim r As Integer = 0
+        Dim d As Integer = 0
+
+        While v <> 0
+            d = v Mod 10
+            r = r Or (d << (4 * i))
+            i += 1
+            v = (v - d) \ 10
+        End While
+        Return r
     End Function
 
