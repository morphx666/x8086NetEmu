+
+    Private Function IsPrefix(opCode As Byte) As Boolean
+        Select Case opCode
+            Case &H26, &H2E, &H36, &H3E, &HF2, &HF3 : Return True
+        End Select
+        Return False
+    End Function
+
+    Private Function AdjustIP(v As UShort) As UShort
+        While IsPrefix(RAM8(mRegisters.CS, v - 1))
+            v -= 1
+        End While
+        Return v
+    End Function
